
    <div class="row">
        <span class="infos">Card is saved in {{ deck['nickname'][0] }} cards, add this card to a Deck</span>

        <button name="finished" class="btn btn_1 btn-outline-success">finished</button>

            {% for deck in decks %}

                <article class="col-12 col-md-6 col-lg-4 decks__deck">
                    <img class="decks__img" src="{{ deck['image_uris'][0] }}" alt="magic deck">

                    <div class="decks__text">
                        <h2>{{ deck['name'][0] }}</h2>
                        <p>format: {{ deck['format'][0] }}</p>
                        {% for color in deck['colors'] %}
                            <img class="color__img" src="img/{% if color %}{{ color }}.png{% else %}nocolor.jpg{% endif %}" alt="">
                        {% endfor %}
                        <p>created By:<br>
                            <span class="title_colorless">{{ deck['nickname'][0] }}</span></p>
                        <button class="btn btn_1 btn-outline-success" name="deck__select_deck" data-card="{{ cardId[0] }}" data-deck="{{ deck['id'][0] }}">Add Card</button>
                    </div>
                </article>

            {% endfor %}
    </div>

