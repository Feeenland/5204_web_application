{% extends 'layout.html.twig' %}

{% block title %}ForgotPw{% endblock %}

{% block info %}
    {% for info in infos %}
        {{ info }}
    {% endfor %}
{% endblock %}

{% block content %}
    <div class="container login">
        <div class="row justify-content-between">
            <div class="col-0 col-md-1 login__space_pw"></div>
            <div class="col-11 col-lg-11 login__register">
                <form id="forgotpw__form" action="index.php?p=forgotPw" method="POST">
                    <div class="row justify-content-between">
                        <div class="col">
                            <h2>Forgot Password</h2>
                        </div>
                        <div class="col-2">
                            <img src="img/Red.png" class="login__img img-fluid" alt="image fire red">
                        </div>
                    </div>
                    <input type="hidden" name="forgotPw" value="1">
                    <div class="form-group row">
                        <label for="name" class="col col-form-label title_colorless">name:</label>
                        <input
                                type="text"
                                name="name"
                                class="form-control name_has_error"
                                id="name"
                                placeholder="kate"
                                value="">
                        <p class="error_message error_name"></p>
                    </div>
                    <input type="hidden" name="login_try" value="1">
                    <div class="form-group row">
                        <label for="favourite_card" class="col col-form-label title_colorless">favorite card:</label>
                        <input
                                type="text"
                                name="favourite_card"
                                class="form-control favourite_card_has_error"
                                id="favourite_card"
                                placeholder="card name"
                                value="">
                        <p class="error_message error_favourite_card"></p>
                    </div>
                    <input type="hidden" name="login_try" value="1">
                    <div class="form-group row">
                        <label for="nickname" class="col col-form-label title_colorless">nick name:</label>
                        <input
                                type="text"
                                name="nickname"
                                class="form-control nickname_has_error"
                                id="nickname"
                                placeholder="kitty =^.^="
                                value="">
                        <p class="error_message error_nickname"></p>
                    </div>
                    <div class="form-group row">
                        <label for="newPassword" class="col col-form-label title_colorless">Enter New Password:</label>
                        <input
                                type="password"
                                name="password"
                                class="form-control password_has_error"
                                id="newPassword"
                                placeholder="New Password">
                        <p class="error_message error_password"></p>
                    </div>
                    <div class="row justify-content-center">
                        <button type="submit" class="btn_1 btn btn_send btn-outline-primary">Send</button>
                    </div>
                </form>

                <button class="btn btn_1 btn-outline-success">
                    <a class="nav-link" href="index?p=login">Login</a>
                </button>
                <br>
                <button class="btn btn_1 btn-outline-secondary">
                    <a class="nav-link" href="index?p=register">Register</a>
                </button>

            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="js/login/forgotPw.js"></script>
{% endblock %}
